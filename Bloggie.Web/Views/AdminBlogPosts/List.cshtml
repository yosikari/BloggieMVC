@model List<Bloggie.Web.Models.Domain.BlogPost>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>All BlogPost - Admin Functionality</h1>
	</div>
</div>

<div class="container py-5">
	<table class="table">
		<thead>
			<tr>
				<td>Id</td>
				<td>Heading</td>
			</tr>
		</thead>
		<tbody>
			@foreach(var blogPost in Model)
			{
				<tr>
					<td>@blogPost.Id</td>
					<td>@blogPost.Heading</td>
				</tr>
			}
		</tbody>
	</table>
</div>
